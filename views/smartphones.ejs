<%- contentFor("body") %>
<div class="container marketing mt-5">
<div class="row">
  <% smartphones.forEach(function(smartphone){ %>     
  <div class="col-lg-4">
    <img
      class="bd-placeholder-img"
      width="140"
      height="140"
      role="img"
      aria-label="Placeholder: 140x140"
      preserveAspectRatio="xMidYMid slice"
      focusable="false"
      src="<%= smartphone.imageUrl %>"
    >

    <h2 class="fw-normal"><%= smartphone.name %></h2>
    <p>
      <%= smartphone.description %>
    </p>
    <p>
      <a class="btn btn-secondary" href="#"><%= smartphone.price.toLocaleString('pt-BR', { style: 'currency', 'currency': 'BRL', }); %> &raquo;</a>
    </p>
  </div>
  <% }) %>
</div>


